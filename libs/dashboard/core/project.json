{
  "name": "core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/dashboard/core/src",
  "prefix": "",
  "projectType": "library",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/dashboard/core/ng-package.json",
        "styles": [
          "libs/dashboard/core/src/styles.scss",
          {
            "input": "libs/dashboard/core/src/lib/styles/themes/default.scss",
            "inject": false,
            "bundleName": "default"
          },
          {
            "input": "libs/dashboard/core/src/lib/styles/themes/rose-red.scss",
            "inject": false,
            "bundleName": "rose-red"
          },
          {
            "input": "libs/dashboard/core/src/lib/styles/themes/magenta-violet.scss",
            "inject": false,
            "bundleName": "magenta-violet"
          },
          {
            "input": "libs/dashboard/core/src/lib/styles/themes/cyan-orange.scss",
            "inject": false,
            "bundleName": "cyan-orange"
          }
        ]
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/dashboard/core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/dashboard/core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/dashboard/core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/src/**/*.ts",
          "libs/src/**/*.html",
          "libs/src/**/*.scss"
        ]
      }
    }
  }
}
