{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["libs/dashboard/shared/src/index.ts"],
      "@meta/*": ["./src/app/@meta/*"],
      "@shared": ["libs/dashboard/shared/src/index.ts"],
      "@store/*": ["./src/app/@store/*"],
      "@core": ["libs/dashboard/core/src/index.ts"]
    }
  }
}
